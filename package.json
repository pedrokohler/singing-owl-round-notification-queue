{
  "name": "singing-owl-round-lifecycle-controller",
  "description": "A cloud function to control round lifecycle for the Song Ballot application",
  "author": "Pedro Kohler",
  "scripts": {
    "prebuild": "rimraf dist",
    "deploy:dev": "npm run build && bash bin/deploy-development",
    "deploy:prod": "npm run build && bash bin/deploy-production",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" ",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "npm run build && firebase emulators:start",
    "shell": "npm run build && firebase functions:shell",
    "start:debug": "npm run build && firebase emulators:start --inspect-functions --import ./dumps/2021-09-30-dump",
    "logs": "firebase functions:log",
    "create-dump": "./bin/create-dump",
    "download-dump": "./bin/download-dump"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/logging-winston": "^4.1.0",
    "@google-cloud/pubsub": "^2.12.0",
    "@nestjs/common": "^7.6.17",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.17",
    "axios": "^0.22.0",
    "firebase-admin": "^9.10.0",
    "firebase-functions": "^3.14.1",
    "luxon": "^1.27.0",
    "nest-winston": "^1.5.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.7",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.15",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/luxon": "^1.27.0",
    "@types/node": "^14.14.36",
    "@types/supertest": "^2.0.10",
    "@types/uuidv4": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "firebase-functions-test": "^0.2.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.0"
  }
}
